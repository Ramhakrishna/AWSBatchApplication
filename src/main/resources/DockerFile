# Use an official Ubuntu or Amazon Linux as a base image
FROM ubuntu:latest

# Install bash (optional since Ubuntu already has Bash)
RUN apt-get update && apt-get install -y bash

# Copy your Bash script into the Docker image
COPY hello.sh /usr/local/bin/hello.sh

# Ensure the script is executable
RUN chmod +x /usr/local/bin/hello.sh

# Set the default command to execute the Bash script
CMD ["/usr/local/bin/hello.sh"]
